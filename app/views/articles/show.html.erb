<div class="d-flex justify-content-between m-4">
  <%= link_to "wikinimous", articles_path %>
  <%= link_to "New Article", new_article_path %>
</div>
<div class="d-flex justify-content-center mt-4">
  <div class="flex-grow-0.8 pe-5 ms-5 text-center">
    <h3><%= @article.title %></h3>
    <p><%= @article.content %></p>
  </div>
  <div class="ms-3 mt-1">
    <%= link_to "Edit", edit_article_path %>
  </div>
  <div class=" ms-1 mt-1">
    <%= link_to "Delete", article_path(@article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>

<div class="container text-center ms-5">
  <% @articles[1,@articles.length-1].each do |article| %>
  <h3><%= article.title%></h3>
  <p><%= article.content %></p>
  <% end %>
</div>
